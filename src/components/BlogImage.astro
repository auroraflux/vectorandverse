---
export interface Props {
  src: string;
  alt: string;
  caption?: string;
}

const { src, alt, caption } = Astro.props;
---

<figure class="my-8">
  <img 
    src={src}
    alt={alt}
    data-lightbox="true"
    data-full-src={src}
    class="w-full rounded-lg shadow-lg cursor-zoom-in hover:shadow-xl transition-shadow duration-300"
    loading="lazy"
  />
  {caption && (
    <figcaption class="text-center text-sm text-gray-600 mt-2">
      {caption}
    </figcaption>
  )}
</figure>