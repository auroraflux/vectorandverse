---
export interface Props {
  variant?: 'home' | 'article' | 'minimal';
}

const { variant = 'home' } = Astro.props;
---

<!-- Skip navigation link for accessibility -->
<a href="#main-content" 
   class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-black focus:text-white focus:px-4 focus:py-2 focus:rounded focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-lime-600">
  Skip to main content
</a>

<header class="fixed top-0 left-0 right-0 z-30">
  {/* Gradient vignette for article pages */}
  {variant === 'article' && (
    <div class="absolute inset-0 h-48 pointer-events-none" 
         style="background: linear-gradient(to bottom, 
                rgba(0,0,0,0.9) 0%, 
                rgba(0,0,0,0.85) 5%, 
                rgba(0,0,0,0.8) 10%, 
                rgba(0,0,0,0.7) 20%, 
                rgba(0,0,0,0.6) 30%, 
                rgba(0,0,0,0.5) 40%, 
                rgba(0,0,0,0.4) 50%, 
                rgba(0,0,0,0.3) 60%, 
                rgba(0,0,0,0.2) 70%, 
                rgba(0,0,0,0.1) 80%, 
                rgba(0,0,0,0.05) 90%, 
                transparent 100%);"></div>
  )}
  
  <div class="relative max-w-7xl mx-auto px-6 py-6">
    <nav class="flex items-center justify-between">
      <a href="/" class="group no-underline">
        <h1 class={`text-3xl md:text-4xl tracking-tight transition-all duration-300 group-hover:translate-x-1 hero-logo-transition ${variant === 'article' ? 'text-white' : 'text-gray-900'}`} 
            style={`${variant === 'article' ? 'text-shadow: 0 2px 20px rgba(0,0,0,0.5);' : ''}`}>
          <span style="font-weight: 900;">kilo</span><span style="font-weight: 900; font-style: italic;">what!?</span>
        </h1>
      </a>
      
      <div class="flex items-center gap-8">
        {variant === 'home' && (
          <p class="hidden lg:block text-sm text-gray-600" style="font-weight: 500;">
            A minimal space for thoughtful writing
          </p>
        )}
        <a href="/about" class={`text-sm transition-all duration-300 hover:translate-x-1 ${variant === 'article' ? 'text-white/80 hover:text-white' : 'text-gray-600 hover:text-gray-900'}`} 
           style={`font-weight: 500; ${variant === 'article' ? 'text-shadow: 0 2px 10px rgba(0,0,0,0.5);' : ''}`}>
          About
        </a>
      </div>
    </nav>
  </div>
</header>

<!-- Spacer to account for fixed header -->
<div class={variant === 'home' ? 'h-24' : 'h-0'}></div>