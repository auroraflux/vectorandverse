---
import { DIMENSION_CONFIG, COLOR_CONFIG, BRAND_CONFIG } from '../lib/config';

export interface Props {
  variant?: 'home' | 'article' | 'minimal';
}

const { variant = 'home' } = Astro.props;
---

<!-- Skip navigation link for accessibility -->
<a href="#main-content" 
   class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-black focus:text-white focus:px-4 focus:py-2 focus:rounded focus:shadow-lg focus:outline-none focus:ring-2 focus:ring-lime-600 touch-target">
  Skip to main content
</a>

<header class="fixed top-0 left-0 right-0 z-30">
  {/* Gradient vignette for article pages */}
  {variant === 'article' && (
    <div class="absolute inset-0 h-48 pointer-events-none" 
         style={`background: linear-gradient(to bottom, ${COLOR_CONFIG.gradientStops.vignette.map(stop => 
           `rgba(0,0,0,${stop.opacity}) ${stop.position}`
         ).join(', ')});`}></div>
  )}
  
  <div class="relative max-w-7xl mx-auto px-6 py-6">
    <nav class="flex items-center justify-between">
      <a href="/" class="group no-underline touch-focus">
        <h1 class={`text-3xl md:text-4xl tracking-tight transition-all duration-300 group-hover:translate-x-1 hero-logo-transition ${variant === 'article' ? 'text-white' : 'text-gray-900'}`} 
            style={`${variant === 'article' ? 'text-shadow: 0 2px 20px rgba(0,0,0,0.5);' : ''}`}>
          <span class="font-weight-600">Vector</span><span class="font-weight-300">&</span><span class="font-weight-900-italic">Verse</span>
        </h1>
      </a>
      
      <div class="flex items-center gap-8">
        {variant === 'home' && (
          <p class="hidden lg:block text-sm text-gray-600 font-weight-500">
            {BRAND_CONFIG.descriptions.navigation}
          </p>
        )}
        <a href="/about" class={`text-sm transition-all duration-300 hover:translate-x-1 font-weight-500 touch-target touch-focus ${variant === 'article' ? 'text-white/80 hover:text-white' : 'text-gray-600 hover:text-gray-900'}`} 
           style={`${variant === 'article' ? 'text-shadow: 0 2px 10px rgba(0,0,0,0.5);' : ''}`}>
          About
        </a>
      </div>
    </nav>
  </div>
</header>

<!-- Spacer to account for fixed header -->
<div style={variant === 'home' ? `height: ${DIMENSION_CONFIG.header.spacerHomeHeight}px` : `height: ${DIMENSION_CONFIG.header.spacerArticleHeight}px`}></div>