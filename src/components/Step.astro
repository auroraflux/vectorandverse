---
interface Props {
  title: string;
  step?: number;
  state?: 'completed' | 'current' | 'inactive';
}

const { title, step, state = 'inactive' } = Astro.props;
---

<div class="step" data-step-number={step} data-state={state}>
  <div class="step-icon">
    <span class="step-number">{step}</span>
    <span class="step-check">âœ“</span>
  </div>
  <div class="step-content">
    <h3 class="step-title">{title}</h3>
    <div class="step-description">
      <slot />
    </div>
  </div>
</div>

<style>
  .step {
    display: flex;
    align-items: flex-start;
    margin-bottom: 3rem;
    position: relative;
  }
  
  .step:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 1.125rem;
    top: 3.25rem;
    bottom: -1.75rem;
    width: 4px;
    background-color: #e5e7eb;
  }
  
  .step[data-state="completed"]:not(:last-child)::after {
    background-color: #3b82f6;
  }
  
  .step-icon {
    flex-shrink: 0;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: #f9fafb;
    border: 4px solid #e5e7eb;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.125rem;
    font-weight: 600;
    color: #9ca3af;
    z-index: 1;
    margin-right: 1.5rem;
  }
  
  .step[data-state="current"] .step-icon {
    background-color: #dbeafe;
    border-color: #3b82f6;
    color: #3b82f6;
  }
  
  .step[data-state="completed"] .step-icon {
    background-color: #3b82f6;
    border-color: #3b82f6;
  }
  
  .step-number {
    display: block;
  }
  
  .step-check {
    display: none;
    color: white;
    font-size: 1.25rem;
  }
  
  .step[data-state="completed"] .step-number {
    display: none;
  }
  
  .step[data-state="completed"] .step-check {
    display: block;
  }
  
  .step-content {
    flex: 1;
    padding-top: 0.125rem;
  }
  
  .step-title {
    font-size: 1.125rem;
    font-weight: 600;
    text-transform: lowercase;
    letter-spacing: -0.02em;
    color: #9ca3af;
    margin: 0 0 0.25rem 0;
  }
  
  .step[data-state="current"] .step-title,
  .step[data-state="completed"] .step-title {
    color: #111827;
  }
  
  .step[data-state="current"] .step-title::after {
    content: '';
    display: block;
    height: 2px;
    margin-top: 0.25rem;
    background: linear-gradient(to right, rgb(209, 213, 219), transparent);
  }
  
  .step-description {
    color: #6b7280;
    font-size: 0.95rem;
    line-height: 1.5;
  }
</style>