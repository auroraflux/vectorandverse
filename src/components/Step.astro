---
interface Props {
  title: string;
  step?: number;
  state?: 'completed' | 'current' | 'inactive';
}

const { title, step, state = 'inactive' } = Astro.props;
---

<div class="step" data-step-number={step} data-state={state}>
  <div class="step-icon">
    <span class="step-number">{step}</span>
    <span class="step-check">âœ“</span>
  </div>
  <div class="step-content">
    <h3 class="step-title">{title}</h3>
    <div class="step-description">
      <slot />
    </div>
  </div>
</div>

<style>
  .step {
    display: flex;
    align-items: flex-start;
    margin-bottom: 3rem;
    position: relative;
  }
  
  .step:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 1.125rem;
    top: 3.25rem;
    bottom: -1.75rem;
    width: 4px;
    background-color: var(--color-step-line);
  }
  
  .step[data-state="completed"]:not(:last-child)::after {
    background-color: var(--color-step-line-completed);
  }
  
  .step-icon {
    flex-shrink: 0;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    background-color: var(--color-step-icon-bg);
    border: 4px solid var(--color-step-icon-border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-step-icon-text);
    z-index: 1;
    margin-right: 1.5rem;
  }
  
  .step[data-state="current"] .step-icon {
    background-color: var(--color-step-current-bg);
    border-color: var(--color-step-current-border);
    color: var(--color-step-current-text);
  }
  
  .step[data-state="completed"] .step-icon {
    background-color: var(--color-step-completed-bg);
    border-color: var(--color-step-completed-border);
  }
  
  .step-number {
    display: block;
  }
  
  .step-check {
    display: none;
    color: var(--color-step-completed-text);
    font-size: 1.25rem;
  }
  
  .step[data-state="completed"] .step-number {
    display: none;
  }
  
  .step[data-state="completed"] .step-check {
    display: block;
  }
  
  .step-content {
    flex: 1;
    padding-top: 0.125rem;
  }
  
  .step-title {
    font-size: 20px;
    line-height: 1.6;
    font-weight: 600;
    text-transform: lowercase;
    letter-spacing: -0.02em;
    color: var(--color-step-title-inactive);
    margin: 0 0 0.25rem 0;
  }
  
  .step[data-state="current"] .step-title {
    color: var(--color-step-title-current);
  }
  
  .step[data-state="completed"] .step-title {
    color: var(--color-step-title-completed);
  }
  
  .step[data-state="current"] .step-title::after {
    content: '';
    display: block;
    height: 2px;
    margin-top: 0.25rem;
    background: linear-gradient(to right, var(--color-step-current-border), transparent);
  }
  
  .step-description {
    color: #6b7280;
    font-size: 20px;
    line-height: 1.6;
  }
</style>