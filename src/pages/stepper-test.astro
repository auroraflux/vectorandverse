---
import Layout from '../layouts/Layout.astro';
import Stepper from '../components/Stepper.astro';
import Step from '../components/Step.astro';
import '../styles/global.css';
---

<Layout title="Stepper Test">
  <main class="max-w-3xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-bold mb-8">Stepper Component Test</h1>
    
    <Stepper>
      <Step title="create an account" step={1} state="completed">
        Sign up with your email address and choose a strong password. You'll receive a confirmation email shortly after.
      </Step>
      <Step title="verify email" step={2} state="current">
        Check your inbox for our verification email and click the confirmation link to activate your account.
      </Step>
      <Step title="get full access" step={3} state="inactive">
        Once verified, you'll have complete access to all features and can start exploring the platform.
      </Step>
    </Stepper>
  </main>
</Layout>