---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="404 - Page Not Found" description="The page you're looking for doesn't exist">
  <Header variant="minimal" />
  <div id="main-content" class="fade-in min-h-screen flex items-center justify-center">
    <div class="text-center px-6">
      <h1 class="text-6xl mb-4 lowercase" style="font-weight: 850; font-variation-settings: 'wght' 850;">404</h1>
      <p class="text-xl text-gray-600 mb-8">this page doesn't exist</p>
      <a href="/" class="text-lime-600 hover:underline">go home</a>
    </div>
  </div>
</Layout>