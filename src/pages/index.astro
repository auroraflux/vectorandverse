---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import '../styles/global.css';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout title="Kilowhat">
  <div class="fade-in">
    <header class="max-w-3xl mx-auto px-6 pt-16 pb-12">
      <h1 class="text-5xl md:text-6xl font-medium tracking-tight mb-4 font-serif">
        Kilowhat
      </h1>
      <p class="text-lg text-gray-600">
        A minimal space for thoughtful writing.
      </p>
    </header>
    
    <main class="max-w-3xl mx-auto px-6 pb-24">
      <div class="space-y-12">
        {posts.map((post) => {
          const formattedDate = new Intl.DateTimeFormat('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          }).format(post.data.date);
          
          return (
            <article class="group">
              <a href={`/blog/${post.slug}`} class="block">
                <h2 class="text-2xl md:text-3xl font-medium mb-2 group-hover:text-gray-700 transition-colors font-serif">
                  {post.data.title}
                </h2>
                <p class="text-gray-600 mb-2">
                  {post.data.description}
                </p>
                <time class="text-sm text-gray-500">
                  {formattedDate}
                </time>
              </a>
            </article>
          );
        })}
      </div>
    </main>
  </div>
</Layout>